#   ## TEMPORARILY INACTIVATED UNTIL I FINALIZE MOTIF CLUSTERING
#   if ($task{cluster_motifs}) {
#     push @links, ("MCL clusters" ,$main::outfile{motifs_disco_clusters_tab},
# 		  "intra-cluster degree", $main::outfile{motifs_disco_compa_cluster_intra_degree},
