##### read input tree
my %nodes = (); # node index

## Create a tree with the taxonomy
my $tree_input = new Bio::TreeIO('-format' => 'newick',
			     '-file'   => $infile{input});
while (my $tree = $tree_input->next_tree()) {

    
    ## Identify the root of the tree
    my $root = $tree->get_root_node();
    
#     &RSAT::message::Debug("tree: ".$tree, 
